<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <script src="https://use.fontawesome.com/1bcdef0eaa.js"></script>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <meta name="description" content="Skapa annonser" />
</head>
<body>
    <div id="wrap">
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink("AnnonsSidan™", "RedirectToIndex", "Advertisement", new { @class = "navbar-brand" })
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Mina annonser", "RedirectToIndex", "Advertisement")</li>
                        <li>@Html.ActionLink("Köp", "BuyAuctions", "Advertisement")</li>
                        <li>@Html.ActionLink("Sälj", "CreateAuction", "Advertisement")</li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="container body-content">
            @RenderBody()
        </div>
        <div id="push"></div>
    </div>
    <div id="footer">
        <div class="container text-center">
            <div class="row">
                <p class="text-muted">&copy; @DateTime.Now.Year - AnnonsSidan&trade;</p>
            </div>
        </div>
    </div>
    @*<footer id="footer">
            <div class="container">
                <div class="row center">
                    <p class="text-muted">Place sticky footer content here.</p>
                </div>
            </div>
        </footer>*@
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/spcontext")
    @RenderSection("scripts", required: false)
</body>
</html>
