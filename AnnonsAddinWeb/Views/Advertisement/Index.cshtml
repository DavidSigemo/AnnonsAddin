@using AnnonsAddinWeb.ViewModels
@model IEnumerable<AdvertisementViewModel>
@{
    ViewBag.Title = "Home Page";
}

<div class="container">
    <h3>Mina annonser</h3>
    <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>Rubrik</th>
                <th>Text</th>
                <th>Pris</th>
                <th>Datum</th>
                <th>Kategori</th>
                <th class="text-center"><i class="fa fa-lg fa-ban text-danger" aria-hidden="true"></i></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var listItem in Model)
            {
                <tr>
                    <td>@listItem.Title</td>
                    <td>@listItem.Text</td>
                    <td>@listItem.Price SEK</td>
                    <td>@listItem.Date.ToShortDateString()</td>
                    <td>@listItem.Category.Label</td>
                    <td class="text-center">
                        <button class="btn btn-default">Ta bort</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>