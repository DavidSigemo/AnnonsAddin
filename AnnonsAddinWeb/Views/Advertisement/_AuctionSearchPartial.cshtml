@model IEnumerable<AdvertisementViewModel>

<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th>Rubrik</th>
            <th>Text</th>
            <th>Pris</th>
            <th>Datum</th>
            <th>Kategori</th>
            <th>Användare</th>
            <th class="text-center"><i class="fa fa-lg fa-info-circle text-primary" aria-hidden="true"></i></th>
        </tr>
    </thead>
    <tbody>
        @foreach (AdvertisementViewModel listItem in Model)
        {
            <tr>
                <td>@listItem.Title</td>
                <td>@listItem.Text</td>
                <td>@listItem.Price SEK</td>
                <td>@listItem.Date.ToShortDateString()</td>
                <td>@listItem.Category.Label</td>
                <td>@listItem.User.LookupValue</td>
                <td class="text-center">
                    <button class="btn btn-default" onclick="@Url.Action("ViewAuction", new { id = listItem.ListItemId })">Detaljer</button>
                </td>
            </tr>
        }
    </tbody>
</table>